<div
  class="section product product-l<% if (white===true) { %> bg-white<% } %>"
  <% if (bg_url) { %> style="background-image: url('<%- bg_url -%>')" <% } %>
>
  <div class="container">
    <div class="row">
      <div class="col-md-5 with-background-text">
        <% if (backgroundText!==undefined && backgroundText!=="") {%>
          <div class="background-text"><%- backgroundText -%></div>
        <% } %>
        <div class="text-box<% if (purple_title===true) { %> text-box-purple<% } %>">
            <h5><%- title -%></h5>
            <div class="underline"></div>
        </div> <!-- end text box -->
        <h3><%- headline -%></h3>

        <% for(var i=0; i < paragraphs.length; i++) {%>
          <p>
            <%- paragraphs[i] -%>
          </p>
        <% } %>

      </div>
      <div class="col-md-7">
        <img class="img-responsive img-scroll" src="/assets/<%- image -%>"/>
      </div>
    </div>
  </div>
</div>
