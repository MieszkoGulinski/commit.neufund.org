<div
  id="<%- id -%>"
  data-menu-text="<%- menu_text -%>"
  class="section product product-image<% if (white===true) { %> bg-white<% } %>"
  <% if (bg_url) { %> style="background-image: url('<%- bg_url -%>')" <% } %>
>
  <div class="container">
    <% if (backgroundText!==undefined && backgroundText!=="") {%>
      <div class="background-text"><%- backgroundText -%></div>
    <% } %>
    <div class="text-box<% if (purple_title===true) { %> text-box-purple<% } %>">
        <h5><%- title -%></h5>
        <div class="underline"></div>
    </div> <!-- end text box -->

    <div class="row">
      <div class="col-md-10 col-md-push-1">
        <div class="img-wrapper">
          <img
            class="img-responsive img-scroll"
            src="/assets/<%- image[0].url -%>"
            srcset="/assets/<%- image[1].url -%> <%- image[1].width -%>w, /assets/<%- image[2].url -%> <%- image[2].width -%>w"
          />
        </div>
      </div>
    </div>

  </div>
</div>
