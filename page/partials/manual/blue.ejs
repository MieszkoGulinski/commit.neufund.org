<section class="blue">
  <div class="section-counter"><%- sectionCounter -%></div>
  <div class="row">
    <div class="col-sm-8">
      <h2><%- title -%></h2>
    </div>
    <div class="col-sm-4">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="section-content-blue">
        <% for (var i=0; i<paragraphs.length; i++) { %>
          <% var p = paragraphs[i] %>
          <% if (p.type==="text") { %>
            <p><%- p.content -%></p>
          <% } else if (p.type==="copy") { %>
            <p class="key-copy"><%- p.content -%></p>
          <% } else if (p.type==="qr") { %>
            <p>QR CODE GOES HERE</p>
          <% } %>
        <% } %>
      </div>
    </div>
    <div class="col-sm-4">
      <%- rightSideContent -%>
    </div>
  </div>
</section>